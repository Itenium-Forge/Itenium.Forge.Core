{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          // Template: https://github.com/serilog/serilog/wiki/Formatting-Output
          // :l => switch off quoting of strings
          // :j => json style rendering
          //"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] Uuh <{SourceContext}> {Message:lj} {NewLine}{Exception}",
          // "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "[{@t:HH:mm:ss} {@l:u3}] <{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}> {@m:lj}\n{@x}",
            "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          //"outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] <{SourceContext}> {Message}{NewLine}{Exception}"
          //"outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "[{@t:HH:mm:ss} {@l:u3}] <{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}> {@m:lj}\n{@x}"
          }
        }
      }
    ]
  }
}
