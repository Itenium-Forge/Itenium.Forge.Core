{
  "$schema": "https://itenium-forge.github.io/appsetting-schemas/AppSettingsSchemaV1.json",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=exampleapp.db"
  },
  "Forge": {
    "ServiceName": "Forge.ExampleApp",
    "TeamName": "Core",
    "Tenant": "itenium",
    "Environment": "",
    "Application": "ExampleApp"
  },
  "ForgeConfiguration": {
    "Logging": {
      "FilePath": "c:\\temp\\ExampleApp",
      "LokiUrl": "http://192.168.1.5:3100"
      //"LokiUrl": "http://loki:3100"
    },
    "Security": {
      "ClientId": "forge-spa",
      "ClientDisplayName": "Forge SPA",
      "RedirectUris": "http://localhost:3000/callback,http://localhost:5173/callback",
      "AccessTokenLifetimeMinutes": 60,
      "RefreshTokenLifetimeDays": 14,
      "RoleCapabilities": {
        "admin": [ "ReadResX", "WriteResX" ],
        "user": [ "ReadResX" ]
      }
    }
  }
}
